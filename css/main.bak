/* ==========================================================================
   Kurt Elster's custom styles | @kurtinc
   ========================================================================== */

body { font-family: 'Montserrat', Georgia, Times, "Times New Roman", serif; }

#top {
	background: #C0E2FD;
	position: fixed;
	top: 0; left: 0; right: 0;
	height: 5px;
}

header { 
	margin-top: 5em;
	margin-bottom: 3.5em;	
}

article { 
	width: 90%;
	max-width: 685px;
	margin: 0 auto;
	padding-bottom: 1.6em;
	padding-top: 1.6em;
}

#socials {
	clear: both;
	display: block;
	margin: 1em auto 1.5em auto;
	width: auto;
	text-align: center;
	line-height: .6;
}

.facebook {
	display: inline-block;
	margin-right: 5%;
}

.twitter {
	display: inline-block;
	text-align: left;
}

h1,h2,h3 {
	line-height: 1em;
	margin-top: 0;
	text-rendering: optimizeLegibility; /*  voodoo to enable ligatures and kerning */
}

h1,h2 { text-align: center; }

h1 { 
	color: #363636;
	font-size: 2.68em;
}

h2 { 
	color: #666666; 
	font-size: 1.87em;
	line-height: 1.25em;
}

h3 { 
	color: #019797; 
	font-size: 1.31em;
}

figure { 
	margin-top: 2em; 
	margin-bottom: 2em;
}

figure img { 
	float: left;
	margin-right: 1em;
	padding-bottom: 3em;
}

blockquote + figcaption {
	display: block;
	font-size: inherit;
	text-align: right;
}

blockquote + figcaption:before { content: "—"; }

blockquote:before { content: "“"; }
blockquote:after { content: "”"; }

a { color: #3062C6; }
a:link, a:visited { text-decoration:none; }
a:hover,a:active { text-decoration:underline; transition: 0.5s ease;}

aside {
	position: relative;
	padding: 1em;
	font-size: 1.31em; 
	font-weight: bold;
}
aside:before {
	content: "";
	display: block;
	float: left;
	text-indent: -9999px;
	margin-top: 10px;
	width: 50px;
	height: 50px;
	background: url(/img/arrow.svg);
	background-size: 50px 50px;
}

footer { 
	width: 90%;
	max-width: 685px;
	margin: 1.6em auto;
	text-align: center;
	border-top: 1px solid #AFAFAF;
	padding-top: 1.6em;
}

footer img { 
	width: 39%; 
	min-width: 200px;
	margin: 1.6em;
}

small {
	font-size: 65%;
	display: block;
}

/* ==========================================================================
   Helper classes
   ========================================================================== */

.clearfix:before,
.clearfix:after {
    content: " "; /* 1 */
    display: table; /* 2 */
}

.clearfix:after {
    clear: both;
}

/* ==========================================================================
   Media Queries for Responsive Design.
   ========================================================================== */

@media only screen 
and (min-device-width : 320px) 
and (max-device-width : 480px) {
		h1 { font-size: 2em; }
		h2 { font-size: 1.5em; }
		h3 { text-align:center; }
		#socials { display: none; }
		article { padding-top: 0em; }
		blockquote { margin: 0; }
		figure img { 
			width: 44px; 
			height: 44px;
			padding-bottom: 0em;
			}
		p span:before {
			width: 25px;
			height: 25px;
			background-size: 25px 25px;
		} 
	}

/* ==========================================================================
   Print styles.
   ========================================================================== */

@media print {
    * {
        background: transparent !important;
        color: #000 !important; /* Black prints faster: h5bp.com/s */
        box-shadow: none !important;
        text-shadow: none !important;
    }

    a,
    a:visited {
        text-decoration: underline;
    }

    a[href]:after {
        content: " (" attr(href) ")";
    }

    abbr[title]:after {
        content: " (" attr(title) ")";
    }

    a[href^="#"]:after,
    a[href^="javascript:"]:after {
        content: "";
    }

    pre,
    blockquote {
        border: 1px solid #999;
        page-break-inside: avoid;
    }

    thead {
        display: table-header-group; /* h5bp.com/t */
    }

    tr,
    img {
        page-break-inside: avoid;
    }

    img {
        max-width: 100% !important;
    }

    p,
    h2,
    h3 {
        orphans: 3;
        widows: 3;
    }

    h2,
    h3 {
        page-break-after: avoid;
    }
}